mcdp {
	provides core1 [flops]
	provides core2 [flops]
	provides core3 [flops]
	provides core4 [flops]

	requires voltage [set-of(V)]
	requires power   [W] 
	requires cost    [$]

	core1 <= 1000 flops
	core2 <= 1000 flops
	core3 <= 1000 flops
	core4 <= 1000 flops

	c = 10 W/flops
	power >= 0.5 W + (core1 + core2 + core3 + core4)  * c

	voltage >= {5V}
	cost >= 30$
}
