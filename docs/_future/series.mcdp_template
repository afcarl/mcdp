# take two batteries and put them in series
template (
	type B1: ^Battery,
	type B2: ^Battery,
)

mcdp {
	
	implements Battery

	b1 = new B1
	b2 = new B2

	provided voltage =  voltage ~ {b1.voltage~ + b2.voltage}
	provided current >=  current ~ max(b1.current, b2.current)
	required mass    >=  transport_mass ~ (~b1.mass + ~b2.mass)
 	requires cost    >=          budget ~ (~b1.cost + ~b2.cost)
	

}