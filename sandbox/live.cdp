mcdp {
	
	battery1 = mcdp {
		provides capacity [J]
  		requires mass [kg]

		a = 1 kg / J
		m0 = 5 g
		mass >= a * capacity + m0
	}
  	
  	battery2 = mcdp {
		provides capacity [J]
  		requires mass [kg]

		a = 0.6 kg / J
		m0 = 10 g
		mass >= a * capacity + m0
	}
  	
  	sub battery = battery1 ^ battery2

  	requires mass for battery
  	provides capacity using battery
  	
}