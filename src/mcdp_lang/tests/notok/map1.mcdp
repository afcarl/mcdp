

mcdp { 
	
	battery_generic := map { 
		""" A generic battery """
		
		param specific_energy [J/g] """Specific energy of the battery"""  
		
		return mcdp {
			provides capacity [J]
			requires mass     [kg]
			
			mass >= capacity / specific_energy
		}
	}


battery := battery_generic { specific_energy = 1.0 J/g }

requires mass for battery 
provides capacity using battery
}

 
