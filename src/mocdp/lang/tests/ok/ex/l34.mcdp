# test connected
abstract mcdp {
  provides capacity [J]
  requires weight [g]

  sub motor = abstract mcdp {
    provides capacity [J]
    requires weight [g]

  sub battery = dp {
    provides capacity [J]
    requires weight [kg]

    implemented-by load BatteryDP
  }
    capacity + 1.0 [J] <= battery.capacity 
    battery.weight <= weight
  }

  motor.capacity >= capacity
  weight >= motor.weight

}