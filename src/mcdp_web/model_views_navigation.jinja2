  <button onclick="showPrompt();">+</button>

  <script type="text/javascript">
  window.showPrompt = function() {
    do {
        var name=prompt("Please enter the name for the new model:");
    }
    while(name.length < 4);
    window.location = "/new_model/" + name
  }
  </script>
  
  <select class='hot_select'>
    {% for m in models %}
    <option value="/models/{{m}}/{{current_view}}"    
	    {% if m == model_name %}
	    selected = 1
	    {% endif %}
    >
    	{{m}}
    </option>
    {% endfor %}
  </select>
 
  <a href="/edit/{{model_name}}">Edit</a>
	
  <select class='hot_select'>
    {% for v in views %}
    <option value="/models/{{model_name}}/{{v}}"    
	    {% if v == current_view %}
	    selected = 1
	    {% endif %}
    >
    	{{v}}
    </option>
    {% endfor %}
  </select>
   
  
