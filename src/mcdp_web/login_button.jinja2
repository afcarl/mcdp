{% macro login_button(provider, connect=False) %}

{% if connect %}
{% set sentence = 'Connect your'%}
{% else %}
{% set sentence = 'Login using your'%}
{% endif %}

{% if 'facebook' == provider %}
        <a id='facebook' class="but" href='{{other_logins["facebook"]}}'>
        <img src='{{static}}/facebook.png'/>
        {{sentence}} Facebook account</a>
{% endif %}

{% if 'github'  == provider %}
    <a  id='github' class='but' href='{{other_logins["github"]}}'>
        <img src='{{static}}/github.png'/>
        {{sentence}} Github account</a>
{% endif %}

{% if 'google'  == provider %}
    <a  id='google' class='but' href='{{other_logins["google"]}}'>
        <img src='{{static}}/google.png'/>
        {{sentence}} Google account</a>
{% endif %}

{% if 'linkedin'  == provider %}
    <a  id='linkedin' class='but' href='{{other_logins["linkedin"]}}'>
        <img src='{{static}}/linkedin.png'/>
        {{sentence}} Linkedin account</a>
{% endif %}

{% if 'amazon'  == provider %}
    <a  id='amazon' class='but' href='{{other_logins["amazon"]}}'>
        <img src='{{static}}/amazon.png'/>
        {{sentence}} Amazon account</a>
{% endif %}

{% if 'password' == provider %}
	<a href="#" id='password' class='but'>
		<img src='{{static}}/login_icon.png'/>
		Log in using MCDP account</a>



  <form id='form' action="{{root}}/login/" method="post" title='Please enter login information'>
    <input type="hidden" name="came_from" value="{{came_from}}">
    <table>
    <tr>
      <td>
      	<label for="login">Username</label>
      </td>
      <td>
      	<input type="text" name="login" value="{% if login is defined and login %}{{login}}{% endif %}">
      </td>
     </tr>
    <tr>
	<td>
	      <label for="password">Password</label>
     </td>
     <td>
    	  <input type="password" name="password" value="">
      </td>
    </tr>
    <tr>
	    <td colspan='2' id='last'>
	      <button type="submit" name="form.submitted" value="Log In">Log In</button>
	     </td>
    </tr>
    </table>
  </form>
  <script>

  function button_click() {
  	// $('div#iframe').show();
  	$('#req2').hide();
  }

  function show_dialog() {
  	$( "#form" ).dialog({
  		 classes: {
  		   "ui-dialog": "highlight"
  		 },

  	   position: { my: 'top', at: 'top+100' }
     });
  }
  function init_dialog() {

  	$('#password').click(show_dialog);
  	// $('#request').button().click(button_click);
  }
  $(document).ready(init_dialog);

  </script>

<style>
#form { display: none}
</style>
{% endif %}

<style>
a#facebook::over {
	background-color: blue;
}

