{% if message is defined%}
	<p>{{message}}</p>
{% endif %}
{% if error %}
	<p id='login-error'>{{error}}</p>

{% endif %}


<div id='outer-outer'>
<div id='outer'>
	{% if 'facebook' in other_logins %}
		<p>
			<a id='facebook' class="but" href='{{other_logins["facebook"]}}'>
			<img src='{{static}}/facebook.png'/>
			Log in using your Facebook account</a>
		</p>
	{% endif %}

	{% if 'github' in other_logins %}
		<p><a  id='github' class='but' href='{{other_logins["github"]}}'>
			<img src='{{static}}/github-light.png'/>
			Log in using your Github account</a></p>
	{% endif %}

	{% if 'google' in other_logins %}
		<p><a  id='google' class='but' href='{{other_logins["google"]}}'>
			<img src='{{static}}/google.png'/>
			Log in using a Google account</a></p>
	{% endif %}

	{% if 'linkedin' in other_logins %}
		<p><a  id='linkedin' class='but' href='{{other_logins["linkedin"]}}'>
			<img src='{{static}}/linkedin.png'/>
			Log in using a Linkedin account</a></p>
	{% endif %}

	<p><a href="#" id='local' class='but'>
		<img src='{{static}}/login_icon.png'/>
		Log in using MCDP account</a></p>

</div></div>
<style>
#outer-outer {
	text-align: center;
	margin-top: 3em;
}
#outer {
/*border: solid 1px red;*/
	display: inline-block;
	padding:0;
}
a#facebook::over {
	background-color: blue;
}

a#facebook {
	background-color: #3b5998;
	color: white;
	font-family: "Lucida Grande", "Tahoma";
}

a#linkedin {
	background-color: #0077b5;
	color: white;
	font-family: "Lucida Grande", "Tahoma";
}


