	background-color: #d34836;
	color: white;
	font-family: "Lucida Grande", "Tahoma";
}

a#github {
	background-color: black;
	color: white;
	font-family: "Arial";
}

a#local {
	background-color: white;
	border: solid 1px black;
	color :black;
}
a.but {
	display: inline-block; margin: 0.5em;

	width: 100%;
	border-radius: 4px;
	padding-top: 10px;
	padding-bottom: 10px;
	padding-right: 5px;
	 box-shadow: 3px 3px 5px #aaa;
}
a.but img {
	height: 1.5em;
	margin-bottom: -0.3em;
	margin-right: 1em;
}
</style>

<!-- <pre>came_from = {{came_from}}</pre> -->

  <form id='form' action="{{root}}/login/" method="post" title='Please enter login information'>
    <input type="hidden" name="came_from" value="{{came_from}}">
    <table>
    <tr>
      <td>
      	<label for="login">Username</label>
      </td>
      <td>
      	<input type="text" name="login" value="{% if login is defined and login %}{{login}}{% endif %}">
      </td>
     </tr>
    <tr>
	<td>
	      <label for="password">Password</label>
     </td>
     <td>
    	  <input type="password" name="password" value="">
      </td>
    </tr>
    <tr>
	    <td colspan='2' id='last'>
	      <button type="submit" name="form.submitted" value="Log In">Log In</button>
	     </td>
    </tr>
    </table>
  </form>

<style>
#form { display: none}
	td#last {
		text-align: center;
		padding-top:10pt;
	}

	p#req {
		margin-top: 5em;
		text-align:center;
		/*margin-top: 40vh;*/
	}
	p#login-error {
		margin-top: 3em;
	}
</style>
<script>

function button_click() {
	// $('div#iframe').show();
	$('#req2').hide();
}

function show_dialog() {
	$( "#form" ).dialog({
		 classes: {
		   "ui-dialog": "highlight"
		 },

	   position: { my: 'top', at: 'top+100' }
   });
}
function init_dialog() {

	$('#local').click(show_dialog);
	// $('#request').button().click(button_click);
}
$(document).ready(init_dialog);

</script>

