<style>
#login-error {
color:red; text-align: center;
font-weight: bold;
font-size: smaller;
}
</style>

{% if message %}
	<p>{{message}}</p>
{% endif %}
{% if error %}
	<p id='login-error'>{{error}}</p>
{% endif %}

  <form id='form' action="{{root}}/login/" method="post" title='Please enter login information'>
    <input type="hidden" name="came_from" value="{{came_from}}">
    <table>
    <tr>
      <td>
      <label for="login">Username</label>
      </td>
      <td>
      <input type="text" name="login" value="{% if login is defined and login %}{{login}}{% endif %}">
      </td>
     </tr>
    <tr>
	<td>
      <label for="password">Password</label>
     </td><td>
      <input type="password" name="password" value="">
      </td>
    </tr>
    <tr>
    <td colspan='2' id='last'>
      <button type="submit" name="form.submitted" value="Log In">Log In</button>
      </td>
    </tr>
  </form>
  
<style>
	td#last {
		text-align: center;
		padding-top:10pt;
	}
</style>
<script>
function init_dialog() {
  $( "#form" ).dialog({
		  classes: {
		    "ui-dialog": "highlight"
		  },
		  position: { my: 'top', at: 'top+100' },
	});
}
$(document).ready(init_dialog);

</script>