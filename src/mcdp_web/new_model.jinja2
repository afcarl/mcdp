<script type="text/javascript">
  window.showPrompt = function() {
    do {
        var name=prompt("Please enter the name for the new model:");
    }
    while(name.length < 4);
    
    url = "/libraries/{{navigation['current_library']}}/new_model/" + name
    
    var win = window.open(url, '_blank');
	if (win) {
	    //Browser has allowed it to be opened
	    win.focus();
	} else {
	    //Browser has blocked it
	    alert('Please allow popups for this application.');
	}
    
  }
</script>
<button onclick="showPrompt();">+</button>