{% macro list_libraries_by_shelf(repo_name) %}
{%  from 'add_library_button.jinja2' import add_library_button with context %}
{%  from 'list_libraries_for_shelf.jinja2' import list_libraries_for_shelf with context %}
<style>
{# ul.shelves_list
{
    list-style: none;
