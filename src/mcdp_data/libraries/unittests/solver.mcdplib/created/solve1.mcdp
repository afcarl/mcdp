mcdp {
        f = instance mcdp  {
            provides a [s]
            
            requires x [s]
            requires y [s]
            
            x + y >= a
        }

        provides z [s]

        f.a >= ceil(sqrt(f.x)) + ceil(sqrt(f.y)) + z 

        requires x, y for f

        # this has a (4,4) isolated solution!
        # x + y >= ceil(sqrt(x)) + ceil(sqrt(y)) + 4
}