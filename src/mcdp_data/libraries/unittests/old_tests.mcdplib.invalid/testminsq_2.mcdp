   mcdp {
        provides f0 [R]
        sub DP = instance mcdp {
            provides f [R]
            requires r2 [R]
            
            sub hnlin = instance dp {
                provides x [R]
                requires r [R]
                
                implemented-by load SimpleNonlinearity1
            }
            
            hnlin.x >= min(f, hnlin.r)  
            r2 >= hnlin.r      
        }
        DP.f >= max(DP.r2, f0)
      }
